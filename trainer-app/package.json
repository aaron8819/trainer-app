{
    "name": "trainer-app",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "predev": "prisma generate",
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "eslint",
        "test": "vitest run",
        "test:watch": "vitest --watch",
        "test:slow": "RUN_SLOW_TESTS=1 vitest run src/lib/engine/__tests__/end-to-end-simulation.test.ts",
        "test:fast": "vitest run src/lib/engine/selection-v2/ src/lib/engine/explainability/ src/lib/api/exercise-preferences.test.ts src/lib/api/template-session.test.ts",
        "prisma:generate": "prisma generate",
        "prisma:studio": "prisma studio",
        "db:seed": "tsx prisma/seed.ts",
        "postinstall": "prisma generate",
        "export:ppl-options": "tsx scripts/export-ppl-options.ts",
        "verify:exercise-library": "tsx scripts/verify-exercise-library.ts",
        "verify:contracts": "tsx scripts/check-doc-runtime-contracts.ts",
        "verify": "npm run lint && npm run test && npm run verify:contracts",
        "repair:exercise-library": "tsx scripts/repair-exercise-library.ts",
        "repair:exercise-library:apply": "tsx scripts/repair-exercise-library.ts --apply"
    },
    "dependencies": {
        "@prisma/adapter-pg": "^7.3.0",
        "@prisma/client": "^7.3.0",
        "@supabase/ssr": "^0.8.0",
        "@supabase/supabase-js": "^2.93.3",
        "next": "16.1.6",
        "pg": "^8.18.0",
        "react": "19.2.3",
        "react-dom": "19.2.3",
        "react-hook-form": "^7.71.1",
        "recharts": "^3.7.0",
        "zod": "^4.3.6",
        "zustand": "^5.0.11"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.2",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^20",
        "@types/pg": "^8.16.0",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@vitejs/plugin-react": "^5.1.4",
        "@vitest/coverage-v8": "^4.0.18",
        "eslint": "^9",
        "eslint-config-next": "16.1.6",
        "happy-dom": "^20.6.1",
        "jsdom": "^28.1.0",
        "prisma": "^7.3.0",
        "tailwindcss": "^4",
